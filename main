#include <iostream>
using namespace std;

#include "funciones.h"
#include "organizar.h"

int main(){
    int op = 0;
    size_t numExtensiones = 0;
    string ruta;
    string* extensiones = nullptr;

    do{
        system("cls");

        if(op < 0 || op > 3){
            system("cls");
            std::cout << "Elige una opcion correcta." << endl;
        }

        std::cout << "------MENU PRINCIPAL------" << endl;

        std::cout << "<1> Organizar" << endl;
        std::cout << "<2> Anadir extensiones" << endl;
        std::cout << "<3> Ver mis extensiones anadidas" << endl;
        std::cout << "<0> Salir" << endl;

        std::cout << "Ingresa una opcion: ";
        std::cin >> op;

        switch(op){
            case 0: break;
            case 1: OrganizarArchivos(extensiones, numExtensiones); break;
            case 2: numExtensiones = AnadirExtensiones(&extensiones, numExtensiones); break;
            case 3: ImprimirExtensiones(extensiones, numExtensiones); break;
        }

    } while(op != 0);

    free_str(&extensiones);

    system("pause");
    return EXIT_SUCCESS;
}
